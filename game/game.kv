#:import _ utils.i18n._

<FullImage@Image>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.size
            pos: self.pos

<GameScreen>:
    board_grid:board_grid
    size_hint_x:None
    width:root.height
    GridLayout:
        id:board_grid
        cols:8
        spacing:[5,5]
        padding:[5,5]

<Square>:
    canvas:
        Color:
            rgb:root.color_square
        Rectangle:
            pos:root.pos
            size:root.size
            
<Piece>:
    canvas:
        Color:
            rgba:(0,0,0,0)
    drop_func:root.move_to
    FullImage:
        source:root.get_texture()