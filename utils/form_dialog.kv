

<FormDialog>:
    btn:btn
    btn_goma:btn_goma
    height:400
    formulario:formulario
    orientation: 'vertical'
    BoxLayout:
        id:formulario
        orientation:'horizontal'
        size_hint_x: 1
        size_hint_y: 1 
        
    BoxLayout:
        orientation:'horizontal'
        size_hint_x: 1
        size_hint_y: None
        size: 0,60
        Label:
            size_hint_x:1
        Button:
            id:btn
            background_normal:'drawable/visto.png'
            background_down:'drawable/visto3.png'
            size_hint_x: None
            size_hint_y: None
            size: 60,60
            border: (0,0,0,0)
        HideWidget:
            visible: root.goma_visible
            size_hint_x: None
            size_hint_y: None
            size: 60,60
            Button:
                id:btn_goma
                background_normal:'drawable/borrador_azul.png'
                background_down:'drawable/borrador_ambar.png'
                size_hint_x: None
                size_hint_y: None
                size: 60,60
                border: (0,0,0,0)
        Label:
            size_hint_x:1

