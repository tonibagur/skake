

<PagesView>:
    orientation: 'vertical'
    layout_pages:layout_pages
    title:'' 
    str_derecha:''
    str_izquierda:''
    izquierda:izquierda
    derecha:derecha
    bolas:bolas
    BoxLayout:
        orientation: 'horizontal'
        size_hint_x: 1
        size_hint_y: None
        size: (0,60)
        BoxLayout:
            orientation: 'horizontal'
            id: izquierda
            size_hint_x: 0.4
            size_hint_y: None
            height: 60           
            Label:
                text: ''
                size_hint_x: 0.2 
                size_hint_y: None
                size: (0,20)
                font_size:get_format('font18')
            Label:
                text: root.str_izquierda
                size_hint_x: 0.2
                size_hint_y: None
                size: (0,20)
                font_size:get_format('font18')
            
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            
            Label:
            Bolas:
                id:bolas
                n:root.num_pages
                i:root.layout_pages.index
                size_hint_x: 1
                size_hint_y: None
                size: (0,20)
            Label:
            
        BoxLayout:
            orientation: 'horizontal'
            id: derecha
            size_hint_x: 0.4
            
            Label:
                text: ''
                size_hint_x: 0.2 
                size_hint_y: None
                size: (0,20)
            Label:
                text: root.str_derecha
                size_hint_x: 0.2 
                size_hint_y: None
                size: (0,20)
            
    BoxLayout:
        size_hint_x: 1 
        size_hint_y: None
        size: (0,3)
        canvas.before:
            Color:
                rgb: (0,0,1,1)
            Rectangle:
                pos:self.pos
                size:self.size
    Carousel:
        id:layout_pages
        



<Bolas>:
    orientation: 'horizontal'
    n: 4 
    i: 1 
  
<Bola>:
    canvas:
        Color:
            rgb:(.5,.5,.5,1) if self.c else (.3,.3,.3,1)
        Ellipse:
            pos:self.pos
            size:(10,10) 
   
